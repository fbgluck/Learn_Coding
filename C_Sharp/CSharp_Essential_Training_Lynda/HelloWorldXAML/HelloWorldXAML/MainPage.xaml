<Page
    x:Class="HelloWorldXAML.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorldXAML"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="Hello World!" HorizontalAlignment="Left" Margin="147,272,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock x:Name="txtHello" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="HelloWorldXAML" VerticalAlignment="Top" FontSize="36"/>

    </Grid>
</Page>
